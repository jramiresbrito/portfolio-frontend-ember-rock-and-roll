{{yield}}
{{#each this.stars as |star|}}
  <button type="button"
    {{on "click" (fn @onUpdate star.rating)}}
    {{on "mouseenter" (fn this.shouldSpin (array star true))}}
    {{on "mouseleave" (fn this.shouldSpin (array star false))}}
  >
    <FaIcon
      @icon="star"
      @prefix={{if star.full "fas" "far"}}
      @spin={{star.spin}}
    />
  </button>
{{/each}}